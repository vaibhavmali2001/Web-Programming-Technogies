<html>
    <head>
        <script>
            function handler1()
            {
                let http = new XMLHttpRequest()
                http.onload=function ()
                {
                    let jsonobj = JSON.parse(http.response)
                    document.getElementById("p1").innerHTML=`<h1>Message:${jsonobj.message}</h1>`
                    document.getElementById("p2").innerHTML=`<h1>Sender:${jsonobj.sender}</h1>`
                }
                http.open("GET","http://localhost:5000/message")
                http.send()
            }
                function handler2()
                {
                    let n = document.getElementById("n1").value
                    let obj={num:n}
                    let http = new XMLHttpRequest()
                    http.onload = function()
                    {
                        let jsonobj = JSON.parse(http.response)
                        console.log(http.response)
                        document.getElementById("p3").innerHTML=`<h1>Square:${jsonobj.sqr}</h1>`
                    }
                    http.open("POST","http://localhost:5000/square")
                    http.setRequestHeader("Content-Type","application/json")
                    http.send(JSON.stringify(obj))
                }
            
        </script>
    </head>
    <body>
        <input type="button" value="Press" onclick="handler1()">
        <p id="p1"></p>
        <p id="p2"></p>
        <input type="number" placeholder="Enter the num" id="n1">
        <input type="button" value="Press me" onclick="handler2()">
        <p id="p3"></p>
    </body>
</html>